{% extends 'base.html.twig' %}

{% block title %}Matchs{% endblock %}

{% block stylesheets %}
<style>
body { background: #f0f0f0; padding: 20px; }
.container { max-width: 500px; margin: 0 auto; background: white; padding: 20px; }
.match { background: #f8f8f8; padding: 10px; margin: 5px 0; }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <h1>Matchs</h1>
    <button onclick="location.reload()">Mise Ã  jour</button>
    
    {% for game in games %}
        <div class="match">
            <strong>{{ game.team1 }} vs {{ game.team2 }}</strong><br>
            {{ game.score }} - {{ game.playedAt|date('d/m/Y H:i') }}
        </div>
    {% else %}
        <div class="match">Aucun match</div>
    {% endfor %}
</div>
{% endblock %}
